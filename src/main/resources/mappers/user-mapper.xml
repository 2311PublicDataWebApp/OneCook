<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="UserMapper">
	<resultMap type="User" id="UserResultMap">
		<id	    property="USERiD" 		column="USER_ID"/>
		<result property="userPw" 		column="USER_PW"/>
		<result property="userName" 	column="USER_NAME"/>
		<result property="userEmail" 	column="USER_EMAIL"/>
		<result property="userNick" 	column="USER_NICK"/>
		<result property="userPhone" 	column="USER_PHONE"/>
		<result property="userAddress"  column="USER_ADDRESS"/>
		<result property="userDate" 	column="USER_DATE"/>
		<result property="adminId" 		column="ADMIN_ID"/>
		<result property="adminPw" 		column="ADMIN_OW"/>
	</resultMap>

	<select id="checkUserLogin" resultMap="UserResultMap">
		SELECT * FROM USER_TBL
		WHERE USER_ID = #{userId} AND USER_PW = #{userPw}
	</select>
	<select id="checkAdminLogin" resultMap="UserResultMap">
		SELECT * FROM USER_TBL
		WHERE ADMIN_ID = #{adminId} AND ADMIN_PW = #{adminPw}
	</select>
</mapper>